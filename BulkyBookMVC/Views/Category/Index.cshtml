@model IEnumerable<BulkyBookMVC.Models.Category>

@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
</div>

<br/>
<br/>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Name</th>
			<th>Display Order</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td width="55%">@category.Name</td>
				<td width="30%">@category.DisplayOrder</td>
				<td width="15%">
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.Id">
						<i class="bi bi-pencil-square"></i> Edit
					</a>
					<a class="btn btn-primary" asp-action="Delete" asp-route-id="@category.Id">
						<i class="bi bi-trash"></i> Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>